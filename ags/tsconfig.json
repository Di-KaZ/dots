{
    "compilerOptions": {
        "rootDir": "./",
        "target": "ES2022",
        "module": "ES2022",
        "allowImportingTsExtensions": true,
        "lib": [
            "ES2022"
        ],
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "typeRoots": [
            "./types/ags.d.ts",
            "./node_modules/@girs"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
